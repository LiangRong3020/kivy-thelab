#:set s dp(150)

<canvasExample1>:
    canvas:
        Rectangle:
            pos: self.center_x -s/2 , self.center_y -s/2
            #pos: dp(100), dp(200)
            size: s, s

        Ellipse:
            pos: 200, 500
            size: 2*s, 3*s
        Line:
            points: (0, 0, self.width/4, 100, self.width*2/4, 0, self.width*3/4, 100, self.width, 0)
            width: 5

<canvasExample2>:
    canvas:
        Line:
            points: (0, self.height/2, self.width, self.height/2)
            width: 2

        Line:
            points: (self.width/2, 0, self.width/2, self.height)
            width: 2

<canvasExample3>:
    canvas:
        Color:
            rgb: 1, 0, 0
        Line:
            circle: (200, 200, 100) #center_x, center_y, radius
            width: 2

        Line:
            ellipse: (500, 300, 100, 200) #center_x, center_y, radius_x, radius_y
            width: 4

        Color:
            rgba: 0, 1, 0, .5

        Line:
            rectangle: (800, 100, 300, 200) #x, y, w, h
            width: 2

