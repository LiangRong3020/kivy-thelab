WidgetsExample:

<WidgetsExample>:
    cols: 3
    Button:
        text: "click"

        # self is present button not widgets so used root
        on_press: root.click_button()

    Label:
        text: root.label_text
        font_name: "fonts/Lcd.ttf"
        font_size: "80dp"

        # R , G, B, visible
        color: 1, .5, .5, .5


<PageLayoutExample@PageLayout>:
    MainWidget:
    ScrollViewExample:


<ScrollViewExample@ScrollView>:
    GridLayoutExample:
        size_hint: 1, None
        height: self.minimum_height



<MainWidget>:
    Button:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "100dp", "200dp"
        color: 1, 0, 0, 1

    Label:
        text: "Hello"
        size: "100dp", "80dp"
        pos: "300dp", "200dp"